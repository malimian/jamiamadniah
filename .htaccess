RewriteEngine On

#RewriteCond %{HTTPS} off
#RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# RewriteCond %{HTTP_HOST} !=localhost
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]


RewriteRule ^sitemap\.xml$ sitemap.php [L]
RewriteRule ^js_settings\.js$ js_settings.php [L]
RewriteRule ^robots\.txt$ robots.php [L]

#RewriteRule ^([^/]*)\.html$ /info.php?url=$1 [L]

RewriteRule ^([^/]*)\.html$ info.php?url=$1 [L,QSA]


DirectoryIndex index.php

ErrorDocument 404 /error404.html


#ModPagespeed off

<IfModule mod_pagespeed.c>
    # Turn off ModPagespeed if not localhost
    RewriteEngine On
    RewriteCond %{REMOTE_ADDR} !^127\.0\.0\.1$
    RewriteCond %{REMOTE_ADDR} !^::1$
    RewriteRule .* - [E=MOD_PAGESPEED_OFF:1]
</IfModule>

